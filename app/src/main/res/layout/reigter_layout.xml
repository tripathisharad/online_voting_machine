<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">


    <ScrollView
        android:layout_width="0dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.96"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/editTextTextPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dashboard_linearlayout_roundshape"
                android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                android:drawablePadding="5dp"
                android:ems="10"
                android:textColor="#424242"
                android:textColorHint="#9E9E9E"
                android:hint="Phone"
                android:inputType="number"
                android:paddingStart="18dp"
                android:paddingTop="10dp"
                android:paddingEnd="18dp"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:textSize="13sp" />


            <EditText
                android:id="@+id/editTextTextEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dashboard_linearlayout_roundshape"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="5dp"
                android:ems="10"
                android:textColor="#424242"
                android:textColorHint="#9E9E9E"
                android:hint="E-Mail"
                android:inputType="textEmailAddress"
                android:paddingStart="18dp"
                android:paddingTop="10dp"
                android:paddingEnd="18dp"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:textSize="13sp" />


               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_margin="10dp"
                   android:layout_height="wrap_content">

                   <EditText
                       android:id="@+id/email_otp_section"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:background="@drawable/dashboard_linearlayout_roundshape"
                       android:drawableLeft="@drawable/ic_baseline_lock_24"
                       android:drawablePadding="5dp"
                       android:ems="10"
                       android:textColor="#424242"
                       android:textColorHint="#9E9E9E"
                       android:hint="OTP"
                       android:inputType="number"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintWidth_percent="0.5"
                       android:paddingStart="18dp"
                       android:paddingTop="11dp"
                       android:paddingEnd="18dp"
                       android:paddingBottom="11dp"
                       android:singleLine="true"
                       android:textSize="13sp" />

                   <androidx.appcompat.widget.AppCompatButton
                       android:id="@+id/send_otp_section"
                       android:layout_width="0dp"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       android:text="Send Otp"
                       android:backgroundTint="#FF0266"
                       android:fontFamily="@font/allerta"
                       android:textColor="@color/white"
                       android:textSize="13sp"
                       android:background="@drawable/register_round_button"
                       app:layout_constraintWidth_percent="0.4"
                       android:layout_height="wrap_content"/>


               </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/editTextNumberPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dashboard_linearlayout_roundshape"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawablePadding="5dp"
                android:ems="10"
                android:drawableRight="@drawable/ic_baseline_visibility_off_24"
                android:textColor="#424242"
                android:textColorHint="#9E9E9E"
                android:longClickable="false"
                android:hint="Password"
                android:inputType="numberPassword"
                android:paddingStart="18dp"
                android:paddingTop="10dp"
                android:paddingEnd="18dp"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:textSize="13sp" />



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/register_round_button"
                android:backgroundTint="#FF0266"
                android:padding="10dp"
                android:fontFamily="@font/allerta"
                android:text="Sign Up"
                android:textColor="@color/white" />





        </LinearLayout>





    </ScrollView>


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>