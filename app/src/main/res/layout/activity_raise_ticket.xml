<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".RaiseTicket">

    <TextView
        android:id="@+id/textViewRT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#7E57C2"
        android:fontFamily="serif"
        android:gravity="center"
        android:padding="15dp"
        android:text="Raise A Ticket"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textViewRT"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="18dp"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="5dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:hint="Full Name"
            android:textSize="14sp"
            android:inputType="textPersonName" />


    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card_view_one"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="18dp"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <EditText
            android:id="@+id/editTextTextPersonName34"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="5dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:hint="Phone"
            android:textSize="14sp"
            android:inputType="textPersonName" />


    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/card_three"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="17dp"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintTop_toBottomOf="@id/card_view_two"
        android:layout_height="0dp" >

        <EditText
            android:id="@+id/editTextTextPersonName4"
            android:layout_width="match_parent"
            android:paddingStart="5dp"
            android:paddingTop="10dp"
            android:textSize="14sp"
            android:paddingBottom="20dp"
            android:scrollbars="vertical"
            android:overScrollMode="always"
            android:gravity="top|left"
            android:hint="Description"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="textMultiLine"/>


    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_four"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card_three"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="18dp"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <EditText
            android:id="@+id/editTextTextPersonName341"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="5dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:hint="How many times did you face this problem....."
            android:textSize="14sp"
            android:inputType="textPersonName" />


    </androidx.cardview.widget.CardView>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/editTextTextPersonName3412"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9"
        android:layout_height="wrap_content"
        android:background="@drawable/dashboard_linearlayout_roundshape"
        android:textColor="#424242"
        android:fontFamily="@font/allerta"
        android:paddingTop="15dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@id/card_view_four"
        android:paddingBottom="15dp"
        android:text="SUBMIT"
        android:textSize="15sp" />



</androidx.constraintlayout.widget.ConstraintLayout>