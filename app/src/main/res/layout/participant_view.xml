<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:padding="15dp"
    android:background="@drawable/dashboard_text_round_shape"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:id="@+id/serial_no"
        android:layout_width="0dp"
        android:text="1"
        android:padding="15dp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/serial_no"
        app:layout_constraintBottom_toBottomOf="@id/serial_no"
        app:layout_constraintStart_toEndOf="@id/serial_no"
        android:background="?android:attr/listDivider"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="1dp" />

    <TextView
        android:id="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/serial_no"
        android:layout_width="0dp"
        android:textStyle="bold"
        app:layout_constraintWidth_percent="0.6"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:padding="15dp"
        android:gravity="center"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="90dp" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView3"
        app:layout_constraintBottom_toBottomOf="@id/textView3"
        app:layout_constraintTop_toTopOf="@id/textView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/person_for_header"
        app:civ_border_width="2dp"
        app:civ_border_color="#E0E0E0"/>


</androidx.constraintlayout.widget.ConstraintLayout>