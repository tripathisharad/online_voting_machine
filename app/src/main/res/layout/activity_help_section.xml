<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".HelpSection">


    <TextView
        android:id="@+id/textViewRT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#7E57C2"
        android:fontFamily="serif"
        android:gravity="center"
        android:padding="15dp"
        android:text="Help Section"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/textViewRT"
        android:layout_height="0dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                android:backgroundTint="#FF6F00"
                android:elevation="5dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:text="PANEL INFO :"
                    android:paddingStart="10dp"
                    android:textSize="20sp"
                    android:fontFamily="@font/allerta"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/white"
                    android:layout_height="match_parent">
                </TextView>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="5dp"
                android:backgroundTint="#546E7A"
                android:elevation="5dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/andika"
                    android:gravity="left"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="* Remember you panel code for voting is the registered mobile number from which the panel is created \n* To create a new panel you must be logged in\n* To Delete the panel swipe it left or right\n* You can't edit the panel name once it created you can either delete it or you can create a new fresh panel\n* Once the panel is created you can proceed to next steps just by clicking the panel name\n"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"></TextView>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#FF6F00"
                android:elevation="5dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:paddingStart="10dp"
                    android:text="PARTICIPANT INFO : "
                    android:textSize="20sp"
                    android:fontFamily="@font/allerta"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/white"
                    android:layout_height="match_parent">
                </TextView>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#546E7A"
                android:elevation="5dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/andika"
                    android:gravity="left"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="* To Add a new participant click on the add new participant button\n* To delete a participant swipe left or right\n* Save and next once you finished the participant list"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"></TextView>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#FF6F00"
                android:elevation="5dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:paddingStart="10dp"
                    android:text="VOTER LIST INFO : "
                    android:textSize="20sp"
                    android:fontFamily="@font/allerta"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/white"
                    android:layout_height="match_parent">
                </TextView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#546E7A"
                android:elevation="5dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/andika"
                    android:gravity="left"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="* To add Voter you have to add text file having mail id's  of each voter \n* Remember you only have to add valid mails id's of voters later on you won't be able to change the list once it is published\n* You can also add voter manually\n* Voter list should contain each voter email on single line\n* A voter list of text file should look like below image one row containing only voter email\n* Remember it must be a text file !"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold">

                </TextView>




            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#546E7A"
                android:elevation="5dp"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:layout_margin="10dp"
                    android:src="@drawable/voter_text_file_demo"
                    android:layout_height="match_parent">

                </ImageView>



            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#FF6F00"
                android:elevation="5dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:paddingStart="10dp"
                    android:text="PUBLISH THE PANEL : "
                    android:textSize="20sp"
                    android:gravity="left"
                    android:fontFamily="@font/allerta"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/white"
                    android:layout_height="match_parent">

                </TextView>




            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#546E7A"
                android:elevation="5dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/andika"
                    android:gravity="left"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="* Once you finished with the voter list you can proceed to next step\n* You can select the date of voting\n* Remember the voting can't start from current date.\n* Remember the voting panel will only be open for current voting date you can't vote once the date is over\n* Result panel will be dynamic it will change till the voting date is not over "
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold">

                </TextView>




            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#546E7A"
                android:elevation="5dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/tutorial_text_view"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/andika"
                    android:gravity="left"
                    android:autoLink="web"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Video tutorial - "
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold">

                </TextView>




            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                android:elevation="5dp"
                android:layout_height="100dp" >

                <com.airbnb.lottie.LottieAnimationView
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/guideline7"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="match_parent"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/man_walking_anim"
                    android:layout_height="wrap_content"/>




            </androidx.cardview.widget.CardView>


        </LinearLayout>














    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>