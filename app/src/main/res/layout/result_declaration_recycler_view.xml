<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dashboard_text_round_shape"
    android:layout_margin="10dp"
    android:padding="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <TextView
        android:id="@+id/textView4ForNames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#424242"
        android:singleLine="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/allerta"
        android:layout_margin="5dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:paddingEnd="15dp"
        android:gravity="start"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintWidth_percent="0.5"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="63dp" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/tag_image_view"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView4ForNames"
        app:layout_constraintEnd_toStartOf="@id/textViewVotes"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:src="@drawable/tag_image"
        android:layout_height="0dp">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/textViewVotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="#424242"
        android:fontFamily="@font/allerta"
        android:gravity="end"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"

        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>